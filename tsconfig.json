{
    "compilerOptions": {
        "lib": ["es2022", "dom"],
        "module": "Node16",
        "removeComments": true,
        "moduleResolution": "Node16",
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "sourceMap": true,
        "target": "es2022",
        "esModuleInterop": true,
        "outDir": ".build",
        "baseUrl": "src/",
        "jsx": "preserve",
        "paths": {
            "company/*": ["company/*"],
            "jobPost/*": ["jobPost/*"],
            "report/*": ["report/*"],
            "social/*": ["social/*"],
            "shared/*": ["shared/*"]
        }
    },
    "include": ["./**/*.ts", "./**/*.tsx"],
    "exclude": [
        "node_modules/**/*",
        ".serverless/**/*",
        ".webpack/**/*",
        ".vscode/**/*"
    ]
}
