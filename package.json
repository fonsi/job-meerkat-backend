{
    "name": "jobmeerkat",
    "scripts": {
        "lint": "eslint --fix",
        "typecheck": "tsc --noEmit",
        "local": "npm run lint && sls invoke local --function",
        "scrap-company": "npm run local devScrapCompany -- --path src/company/infrastructure/dev/scrapCompany.event.json",
        "deploy:dev": "npm run lint && serverless deploy -v",
        "deploy:prod": "npm run lint && serverless deploy -v --stage=production",
        "test": "jest",
        "test:watch": "jest --watch",
        "prepare": "husky",
        "pre-commit": "lint-staged && npm run typecheck && npm test"
    },
    "devDependencies": {
        "@eslint/js": "^9.39.1",
        "@types/jest": "^29.5.14",
        "@types/node": "^20.19.25",
        "@types/react": "^19.2.7",
        "eslint": "^9.39.1",
        "globals": "^16.5.0",
        "husky": "^9.1.7",
        "jest": "^29.7.0",
        "lint-staged": "^16.2.7",
        "postcss": "^8.5.6",
        "prettier": "^3.7.3",
        "serverless": "^4.25.0",
        "ts-jest": "^29.4.5",
        "typescript": "^5.9.3",
        "typescript-eslint": "^8.48.0"
    },
    "volta": {
        "node": "20.17.0"
    },
    "dependencies": {
        "@atproto/api": "^0.18.3",
        "@aws-sdk/client-api-gateway": "^3.940.0",
        "@aws-sdk/client-dynamodb": "^3.940.0",
        "@aws-sdk/client-lambda": "^3.942.0",
        "@aws-sdk/client-sqs": "^3.940.0",
        "@react-email/components": "^0.5.7",
        "cheerio": "^1.1.2",
        "mailgun.js": "^12.2.0",
        "openai": "^5.3.0",
        "react": "^19.2.0",
        "react-dom": "^19.2.0",
        "rollbar": "^2.26.5"
    },
    "lint-staged": {
        "*.{js,ts,mjs,json}": "prettier --list-different --write"
    }
}
